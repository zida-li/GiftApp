<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/text_view"
        android:text="@string/create_event"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <EditText
        android:id="@+id/edit_text_name"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:hint="@string/event"
        android:textColorHint="@color/white"
        />

    <LinearLayout
        android:id="@+id/date_reminder_layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_name"
        android:orientation="horizontal">

    <Button
        android:id="@+id/date_picker"
        android:text="@string/date"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        style="?android:dropDownSpinnerStyle"
        android:maxLines="1"
        android:theme="@style/SpinnerThemeForDarkBackGround"
        />

    <Button
        android:id="@+id/reminder_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reminder"
        android:textColor="@color/white"
        android:layout_weight="0.5"
        style="?android:dropDownSpinnerStyle"
        android:maxLines="1"
        android:theme="@style/SpinnerThemeForDarkBackGround"
        />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cancel_create_layoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_reminder_layoutContainer"
        android:orientation="horizontal">

        <View android:id="@+id/strut"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_button"
        android:background="@drawable/custom_button_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/strut"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:text="@string/create"
        android:textColor="@color/white"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_button"
        android:background="@drawable/custom_button_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/strut"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:text="@string/cancel"
        android:textColor="@color/white"
        />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>