<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_contact"
    app:startDestination="@id/contactFragment">

    <fragment
        android:id="@+id/contactFragment"
        android:name="dev.zidali.giftapp.presentation.main.contacts.ContactFragment"
        android:label="Contacts" >
        <action
            android:id="@+id/action_contactFragment_to_contactDetailFragment"
            app:destination="@id/contactDetailFragment"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            />
    </fragment>
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="dev.zidali.giftapp.presentation.main.contacts.contact_detail.ContactDetailFragment"
        android:label="ContactDetailFragment" />

</navigation>